<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="9dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/newsGroupTitleTextView"
            android:layout_width="259dp"
            android:layout_height="47dp"
            android:gravity="top"
            android:text="기사 제목입니다. 기사 제목입니다."
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/newsGroupThumbnailImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/newsGroupThumbnailImageView"
            android:layout_width="120dp"
            android:layout_height="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/newsGroupTitleTextView"
            app:layout_constraintEnd_toEndOf="parent"
            tools:background="#ff0000"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/groupNewsPublicationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:text="연합뉴스"
            android:textColor="#FF9CA3AF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newsGroupTitleTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="몇시간 전"
            android:textColor="#FF9CA3AF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/groupNewsPublicationTextView"
            app:layout_constraintTop_toBottomOf="@id/newsGroupTitleTextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#E5E7EB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newsGroupThumbnailImageView"
            android:layout_marginTop="9dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>